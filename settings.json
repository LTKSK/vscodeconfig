// 既定の設定を上書きするには、このファイル内に設定を挿入します
{
    "editor.renderWhitespace": "all",
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.rulers": [80],
    "files.autoGuessEncoding": true,
    "files.trimTrailingWhitespace": true,
    "git.ignoreLegacyWarning": true,
    "editor.minimap.enabled": false,
    "prettier.tabWidth": 2,
    "editor.fontFamily": "Consolas, Meiryo, 'Courier New', monospace",
    "go.formatTool": "goimports",
    "python.formatting.autopep8Args": ["--ignore","E402"],
    "[plaintext]": {
        "editor.acceptSuggestionOnEnter": "off",
    },
    "[terraform]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[go]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[vue]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[php]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.tabSize": 4,
    },
    "[review]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "files.trimTrailingWhitespace": false
    },
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.insertModeKeyBindings": [
        {
        "before": ["j", "j"],
        "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
        "before": ["<space>", "h"],
        "after": ["C-w", "h"]
        },
        {
        "before": ["<space>", "j"],
        "after": ["C-w", "j"]
        },
        {
        "before": ["<space>", "k"],
        "after": ["C-w", "k"]
        },
        {
        "before": ["<space>", "l"],
        "after": ["C-w", "l"]
        }
    ],
    "search.exclude": {
        "**/bower_components": true,
        "**/vendor": true,
        "**/env": true,
        "tags":true,
        "**/.svn": true,
        "**/.git": true,
        "**/.DS_Store": true
    },
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.visualstar": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        }
    ],
    "vim.easymotion": true,
    "vim.easymotionKeys": "asdfghjkl",
    "workbench.colorTheme": "Monokai",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.zoomLevel": 0,
    "terraform.languageServer": {
        "external": true,
        "args": ["serve"]
    },
    "editor.formatOnSave": true,
    "rust.rustup": {
        "toolchain": "nightly-x86_64-pc-windows-msvc",
        "nightlyToolchain": "nightly-x86_64-pc-windows-msvc"
    },
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "editor.acceptSuggestionOnEnter": "on",
    "python.defaultInterpreterPath": "C:\\Python36-32\\python.exe",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.showTabs": true, //タブで見えるようにしないと何が開いているのかわからない
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    // "vscode-neovim.neovimExecutablePaths.linux": "/home/linuxbrew/.linuxbrew/bin/nvim",
    // "vscode-neovim.neovimExecutablePaths.win32": "C:\\Users\\Keisuke\\Desktop\\neovim-5.0\\bin\\nvim.exe",
    // "vscode-neovim.neovimInitVimPaths.win32": "~\\AppData\\Local\\nvim\\init.vim"
}
